<%-include('./partials/header')%> <%- include('./partials/nav') %>
<main class="flex justify-center items-center min-h-screen bg-gray-100">
  <div class="w-1/3 bg-white rounded-lg shadow-lg overflow-hidden">
    <div class="flex justify-center">
      <img
        src="<%= power.imageUrl %>"
        alt="<%= power.name %>"
        class="w-10 h-10 object-cover py-2"
        style="max-width: 500px; max-height: 500px"
      />
    </div>
    <div class="p-3">
      <h1 class="text-xl font-bold text-center"><%= power.specialMove %></h1>

      <div class="mt-3">
        <table class="w-full text-xs">
          <tbody>
            <tr>
              <td class="px-2 py-1 font-semibold">Type:</td>
              <td class="px-2 py-1"><%= power.type %></td>
            </tr>
            <tr>
              <td class="px-2 py-1 font-semibold">Human:</td>
              <td class="px-2 py-1"><%= power.isHuman ? 'Yes' : 'No' %></td>
            </tr>
            <tr>
              <td class="px-2 py-1 font-semibold">Strength:</td>
              <td class="px-2 py-1"><%= power.strength %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>

<%-include('./partials/footer')%>
