<%-include('./partials/header')%> <%- include('./partials/nav') %>

<main class="flex justify-center items-center min-h-screen bg-gray-100">
  <div class="w-1/3 bg-white rounded-lg shadow-lg overflow-hidden">
    <div class="flex justify-center">
      <img
        src="<%= character.imageUrl %>"
        alt="<%= character.name %>"
        class="w-10 h-10 object-cover py-2"
        style="max-width: 500px; max-height: 500px"
      />
    </div>
    <div class="p-3">
      <h1 class="text-xl font-bold text-center"><%= character.name %></h1>
      <p class="text-sm text-gray-600 text-center">
        <%= character.description %>
      </p>
      <div class="mt-3">
        <table class="w-full text-xs">
          <tbody>
            <tr>
              <td class="px-2 py-1 font-semibold">Age:</td>
              <td class="px-2 py-1"><%= character.age %></td>
            </tr>
            <tr>
              <td class="px-2 py-1 font-semibold">Active:</td>
              <td class="px-2 py-1">
                <%= character.isActive ? 'Yes' : 'No' %>
              </td>
            </tr>
            <tr>
              <td class="px-2 py-1 font-semibold">Birth Date:</td>
              <td class="px-2 py-1"><%= character.birthDate %></td>
            </tr>
            <tr>
              <td class="px-2 py-1 font-semibold">Role:</td>
              <td class="px-2 py-1"><%= character.role %></td>
            </tr>
            <tr>
              <td class="px-2 py-1 font-semibold">Hobbies:</td>
              <td class="px-2 py-1"><%= character.hobbies.join(', ') %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>

<%-include('./partials/footer')%>
