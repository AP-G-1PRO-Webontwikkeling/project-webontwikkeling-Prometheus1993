<%- include('partials/header.ejs') %>
<body class="bg-gray-100 flex flex-col min-h-screen">
  <%- include('./partials/nav.ejs') %>

  <main class="flex justify-center items-center flex-grow">
    <div class="w-full max-w-md bg-white rounded-lg shadow-lg overflow-hidden p-6">
      <form action="/update-character/<%= character.id %>" method="POST">
        <h1 class="text-2xl font-bold text-center mb-6">Edit Character</h1>

        <div class="mb-4">
          <label for="name" class="block text-gray-700 font-bold mb-2">Name:</label>
          <input type="text" id="name" name="name" value="<%= character.name %>" class="w-full p-2 border rounded-lg focus:outline-none focus:border-blue-500" required>
        </div>

        <div class="mb-4">
          <label for="description" class="block text-gray-700 font-bold mb-2">Description:</label>
          <textarea id="description" name="description" rows="3" class="w-full p-2 border rounded-lg focus:outline-none focus:border-blue-500" required><%= character.description %></textarea>
        </div>

        <div class="mb-4">
          <label for="age" class="block text-gray-700 font-bold mb-2">Age:</label>
          <input type="number" id="age" name="age" value="<%= character.age %>" class="w-full p-2 border rounded-lg focus:outline-none focus:border-blue-500" required>
        </div>

        <div class="mb-4">
          <label for="role" class="block text-gray-700 font-bold mb-2">Role:</label>
          <input type="text" id="role" name="role" value="<%= character.role %>" class="w-full p-2 border rounded-lg focus:outline-none focus:border-blue-500" required>
        </div>

        <div class="flex justify-center mt-6">
          <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg">
            Update Character
          </button>
        </div>
      </form>
    </div>
  </main>

</body>
</html>